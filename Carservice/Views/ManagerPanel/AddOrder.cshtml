<body>
	<div class="site-container">
			<div class="header-top-bar-container clearfix">
				<div class="header-top-bar">
					<ul class="contact-details clearfix">
						<li class="template-phone">
							+7(86394-111-11)
						</li>
						<li class="template-mail">
							<a href="mailto:carservice@mail.com">carservice@mail.com</a>
						</li>
						<li class="template-clock">
							Пн - Пт: 8:00 - 17:30
						</li>
					</ul>
					<div class="search-container">
						<a class="template-search" href="#" title="Поиск"></a>
						<form class="search" action="search.html">
							<input type="text" name="s" placeholder="Поиск..." value="Поиск..." class="search-input hint">
							<fieldset class="search-submit-container">
								<span class="template-search"></span>
								<input type="submit" class="search-submit" value="">
							</fieldset>
						</form>
					</div>
				</div>
				<a href="#" class="header-toggle template-arrow-up"></a>
			</div>
			<div class="header-container">
			<!--<div class="header-container sticky">-->
				<div class="vertical-align-table column-1-1">
					<div class="header clearfix">
						<div class="logo vertical-align-cell">
							<h1><a href="#">Автосервис</a></h1>
						</div>
						<a href="#" class="mobile-menu-switch vertical-align-cell">
							<span class="line"></span>
							<span class="line"></span>
							<span class="line"></span>
						</a>
						<div class="menu-container clearfix vertical-align-cell">
							<nav>
								<ul class="sf-menu">
							<li>
								<a asp-controller="Home" asp-action="Index">
									Главная
								</a>
							</li>
							<li>
								<a asp-controller="Home" asp-action="Services" >
									Услуги
								</a>
								<ul>
									<li>
										<a href="#">
											Диагностика двигателя
										</a>
									</li>
									<li>
										<a href="#">
											Смазки, масла, фильтры
										</a>
									</li>
									<li>
										<a href="#" >
											Ремни и шланги
										</a>
									</li>
									<li>
										<a href="#">
											Ремонт кондиционера
										</a>
									</li>
									<li>
										<a href="#" >
											Ремонт тормозов
										</a>
									</li>
									<li>
										<a href="#" >
											Колёса и шины
										</a>
									</li>
								</ul>
							</li>
							<li>
								<a asp-controller="Home" asp-action="RepairRequest">
									Заявка на ремонт
								</a>
							</li>
							<li>
								<a asp-controller="Home" asp-action="Reviews">
									Отзывы
								</a>
							</li>

								@if (User.IsInRole("Manager"))
								{
											<li class="left-flyout">
												<a href="#" @*asp-controller="ManagerPanel" asp-action="Index"*@>
													Панель управления
												</a>
												<ul>
													<li>
														<a asp-controller="ManagerPanel" asp-action="RepairRequests">
															Активные заявки
														</a>
													</li>
													<li>
														<a asp-controller="ManagerPanel" asp-action="AddOrder">
															Добавить заказ
														</a>
													</li>
													<li>
														<a asp-controller="ManagerPanel" asp-action="DatabaseView">
															База данных
														</a>
													</li>
												</ul>
											</li>
								}
								@if (User.Identity.IsAuthenticated)
								{
										<li class="left-flyout">
											<a asp-controller="Auth" asp-action="Logout">
												Выйти
											</a>
										</li>
								}
								else
								{
										<li class="left-flyout">
											<a asp-controller="Auth" asp-action="Login">
												Вход
											</a>
										</li>
								}
							<li class="left-flyout">
								<a asp-controller="Auth" asp-action="Register">
									Регистрация
								</a>
							</li>
						</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
			<div class="theme-page padding-bottom-66">
				<div class="clearfix">

					<div class="row page-margin-top">
						<div class="column column-1-1">
							<div class="row">
								<h2 class="box-header">ДОБАВИТЬ ЗАКАЗ</h2>
								<p class="description align-center"></p>
							</div>
						</div>
					</div>
					<div class="row page-margin-top">
						<form class="contact-form cost-calculator-container" id="contact-form" method="post" asp-controller="ManagerPanel" asp-action="AddOrder">
							<input type="hidden" asp-for="UserId"/>
							<div class="row">
								<fieldset class="column column-1-3">
									<div class="cost-calculator-box clearfix">
										<label>МЕНЕДЖЕР</label>
										<input type="hidden" name="vehicle-mileage-label" value="VEHICLE MILEAGE">
										<input id="vehicle-mileage" class="cost-slider-input big" placeholder="Менеджер" asp-for="Manager" required>
									</div>
								</fieldset>
								<fieldset class="column column-1-3">
									<div class="cost-calculator-box clearfix">
										<label>ТОВАР</label>
										<input type="hidden" name="vehicle-mileage-label" value="VEHICLE MILEAGE">
										<input id="vehicle-mileage" class="cost-slider-input big" placeholder="Товар" asp-for="Product" required>
									</div>
								</fieldset>
								<fieldset class="column column-1-3">
									<div class="cost-calculator-box clearfix">
										<label>КОЛИЧЕСТВО</label>
										<input type="hidden" name="vehicle-year-label" value="VEHICLE YEAR">
										<div class="cost-slider-container">
											<input id="vehicle-year" class="cost-slider-input" type="number" value="1" asp-for="Amount" required>
											<div class="cost-slider" data-value="1" data-step="1" data-min="1" data-max="1000" data-input="vehicle-year"></div>
										</div>
									</div>
								</fieldset>
							</div>
							<div class="row page-margin-top">
								<fieldset class="column column-1-2">
									<div class="cost-calculator-box clearfix">
										<label>ДАТА ЗАКАЗА</label>
										<input type="hidden" name="appointment-date-label" value="PREFERED DAY OF APPOINTMENT">
										<div class="datepicker-container">
											<span class="ui-icon template-arrow-dropdown"></span>
											<input id="appointment-date" class="cost-slider-datepicker big" asp-for="Date" placeholder="Дата заказа">
										</div>
									</div>
								</fieldset>
								<fieldset class="column column-1-2">
									<div class="clearfix">
										<div class="row">
											<div class="cost-calculator-box clearfix">
												<label>ПОСТАВЩИК</label>
												<select  id="time-frame" class="cost-dropdown" required asp-for="ProviderId">

													<option value="" selected="selected">Выбрать</option>
													@foreach (var provider in Model.Providers)
													{
														<option value="@provider.Id">@provider.Name</option>
													}
												</select>
												<input type="hidden" asp-for="@Model.ProviderId"/>
											</div>
											<br />
										</div>
									</div>

									<input class="more margin-top-20 display-block submit-contact-form" type="submit" value="СОХРАНИТЬ"/>
								</fieldset>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="row dark-gray footer-row full-width padding-top-30 padding-bottom-50">
				<div class="row row-4-4 top-border page-padding-top">
					<div class="column column-1-4">
						<h6 class="box-header">О НАС</h6>
						<ul class="list simple margin-top-20">
							<li>Ростов, Россия (86394)</li>
							<li>Ул. Заводская 165/3</li>
							<li><span>Контактный номер:</span>+7(86394-111-11)</li>
							<li><span>E-mail:</span><a href="mailto:carservice@mail.com">carservice@mail.com</a></li>
						</ul>
						<ul class="social-icons gray margin-top-26">
							<li>
								<a target="_blank" href="#" class="social-facebook" title="facebook"></a>
							</li>
							<li>
								<a target="_blank" href="#" class="social-twitter" title="twitter"></a>
							</li>
							<li>
								<a target="_blank" href="#" class="social-linkedin" title="linkedin"></a>
							</li>
							<li>
								<a href="#" class="social-pinterest" title="pinterest"></a>
							</li>
						</ul>
					</div>
					<div class="column column-1-4">
						<h6 class="box-header">ЧАСЫ РАБОТЫ</h6>
						<ul class="list simple margin-top-20">
							<li><span>Понедельник:</span>8:00 - 17:30</li>
							<li><span>Вторник:</span>8:00 - 17:30</li>
							<li><span>Среда:</span>8:00 - 17:30</li>
							<li><span>Четверг:</span>9:00 - 18:30</li>
							<li><span>Пятница:</span>9:00 - 18:30</li>
							<li><span>Суббота:</span>8:00 - 17:00</li>
							<li><span>Воскресенье:</span>Выходной</li>
						</ul>
					</div>
				</div>
			</div>
	</div>
