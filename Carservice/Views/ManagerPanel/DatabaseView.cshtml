			<div class="theme-page padding-bottom-66">
				
				<div class="row page-margin-top">
					<div class="column column-1-1">
						<div class="row">
							<h2 class="box-header">БАЗА ДАННЫХ</h2>
						</div>
					</div>
				</div>

				<h3 style="width:auto; margin-left: 10%">ЗАЯВКИ</h3>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>ID-клиента</th>
							<th>Имя клиента</th>
							<th>Имейл</th>
							<th>Контактный номер</th>
							<th>Статус заявки</th>
							<th>Год выпуска</th>
							<th>Марка</th>
							<th>Пробег</th>
							<th>Услуги</th>
							<th>VIN-номер</th>
							<th>Регистрационный знак</th>
							<th>День ремонта</th>
							<th>Время ремонта</th>
							<th>Дата заявки</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var request in Model.Context.RepairRequests)
						{
							<tr>
								<td>@request.Id</td>
								<td>@request.AppUserId</td>
								<td>@request.UserName</td>
								<td>@request.Email</td>
								<td>@request.ContactNumber</td>
								@if (request.RequestStatusId == 1)
								{
									<td>Ожидает обработки</td>
								}
								else
								{
									if (request.RequestStatusId == 2)
									{
										<td>Обрабатывается</td>
									}
									else
									{
										<td>Обработана</td>
									}
								}
								<td>@request.MadeYear</td>
								<td>@request.CarBrand</td>
								<td>@request.Mileage</td>
								<td>@request.Services</td>
								<td>@request.VinNumber</td>
								<td>@request.CarNumber</td>
								<td>@request.PreferedDay</td>
								<td>@request.TimeFrame</td>
								<td>@request.Date</td>
							</tr>
						}
					</tbody>
				</table>

				<h3 style="width:auto; margin-left: 10%">ЗАКАЗЫ</h3>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>ID-менеджера</th>
							<th>Менеджер</th>
							<th>Товар</th>
							<th>Количество</th>
							<th>Дата заказа</th>
							<th>ID-поставщика</th>
						</tr>
					</thead>
					<tbody>
					@foreach (var request in Model.Context.Orders)
					{
						<tr>
							<td>@request.Id</td>
							<td>@request.UserId</td>
							<td>@request.UserName</td>
							<td>@request.Product</td>
							<td>@request.Amount</td>
							<td>@request.Date</td>
							<td>@request.ProviderId</td>
						</tr>
					}
					</tbody>
				</table>

				<h3 style="width:auto; margin-left: 10%">Поставщики</h3>
				<table class="table">
					<thead>
						<tr>
							<th>ID-поставщика</th>
							<th>Наименование</th>
							<th>Контактный номер</th>
							<th>Адресс</th>
							<th>Город</th>
						</tr>
					</thead>
					<tbody>
					@foreach (var provider in Model.Context.Providers)
					{
							<tr>
								<td>@provider.Id</td>
								<td>@provider.Name</td>
								<td>@provider.ContactNumber</td>
								<td>@provider.Address</td>
								<td>@provider.City</td>
							</tr>
					}
					</tbody>
				</table>

				<h3 style="width:auto; margin-left: 10%">ТОВАРЫ</h3>
				<table class="table">
					<thead>
						<tr>
							<th>ID-продукта</th>
							<th>Наименование</th>
							<th>Цена</th>
							<th>Количество</th>
						</tr>
					</thead>
					<tbody>
					@foreach (var product in Model.Context.Products)
					{
						<tr>
							<td>@product.Id</td>
							<td>@product.ProductName</td>
							<td>@product.Cost</td>
							<td>@product.Amount</td>
						</tr>
					}
					</tbody>
				</table>
